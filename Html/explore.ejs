<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <link rel="stylesheet" href="./global.css" />
    <link rel="stylesheet" href="./index.css" />
    <link rel="stylesheet" href="./conversion-output.css" />
    <link rel="stylesheet" href="./explore.css" />
    <link rel="stylesheet" href="./profile.css" />
    <link rel="stylesheet" href="./search.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Lexend:wght@700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css    "
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>RateMe</title>
  </head>
  <body>
    <!-- navbar  -->
    <% if(locals.error){ %>
    <div
      class="bg-dark alert rounded-0 text-white alert-dismissible fade show mb-0 pe-3"
      role="alert"
    >
      <div class="container d-flex justify-content-between">
        <div><strong class="text-danger">Error!</strong> <%= error %></div>
        <button
          type="button"
          class="border-0"
          style="background: none"
          data-bs-dismiss="alert"
          aria-label="Close"
        >
          <i
            class="fa-solid fa-xmark"
            style="color: white; font-size: 22px"
          ></i>
        </button>
      </div>
    </div>
    <% } %>

    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand" href="/">RateMe</a>
        <form action="/explore" class="nav_search position-relative">
          <input name="query" placeholder="Search " type="text" />
          <button
            type="submit"
            class="border-0 fs-24 text-white cursor-pointer position-absolute bg-transparent"
          >
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon text-white"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
            <% if(user && weather){ %>
            <li class="nav-item">
              <div class="d-flex align-items-center">
                <img
                  src="https://openweathermap.org/img/w/<%= weather.icon %>.png"
                  alt=""
                />
                <div class="ms-1">
                  <span class="text-white"><%= weather.temp %>Â°C</span>
                </div>
              </div>
            </li>

            <% } if(!user){ %>

            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/contact"
                >Contact Us</a
              >
            </li>
            <% if(user){ %>
            <li class="nav-item">
              <a class="nav-link" href="/explore">Explore Users </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <% } %>
          </ul>
          <div class="d-flex">
            <% if(user){ %>
            <a class="btn nav_btn1 me-2" href="/logout">Logout</a>
            <% } else { %>
            <a class="btn nav_btn1 me-2" href="/login">Login</a>
            <a class="btn nav_btn2" href="/signup">Signup</a>
            <% } %>
          </div>
        </div>
      </div>
    </nav>
<section
  class="container-fluid d-flex justify-content-center align-items-center flex-column explore_section"
>
  <h1>Explore Users</h1>
  <p class="explore_highest">Explore the highest rated users on RateMe</p>
</section>
<section class="rating_section py-5">
  <div class="d-flex justify-content-center gap-4 container-fluid">
    <div class="col-md-3 explore_sidebar">
      <div>
        <p class="mb-2 mt-4">User Country</p>
        <div class="nav_search w-100">
          <select
            class="bg-transparent text-silver border-0 w-100 outline-0"
            aria-label="Default select example"
            name="country"
            style="outline: none"
            id="countries_list"
            onchange="setCountry(this)"
          >
            <option class="bg-dark" value="all">Any</option>
            <% countryList.forEach((c, i) => { %>
            <option class="bg-dark" value="<%= i %>"><%= c.label %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <div>
        <p class="mb-2 mt-4">User Subcategories</p>
        <div
          class="rating_btns d-flex flex-wrap align-items-start justify-content-start"
        >
          <button
            class="<%= cat == 'all' ? 'active' : '' %>"
            onclick="setCat('all')"
          >
            Any
          </button>
          <% categories.forEach(function (category) { %>
          <button
            class="<%= cat == category.id ? 'active' : '' %>"
            onclick="setCat('<%= category.id %>')"
          >
            <%= category.name %>
          </button>
          <% }); %>
        </div>
      </div>
    </div>

    <div class="col-md-8 explore_content">
      <div class="explore_head">
        <span><%= users.length %> Users</span>
        <div
          class="d-flex align-items-center justify-content-end gap-3 col-md-6 sort_user"
        >
          <span> Sort Users by </span>
          <select
            onchange="handleSort(this)"
            id="explore_sort"
            class="nav_search explore_search text-light"
          >
            1
            <option value="all">All Users</option>
            <option value="featured">Featured Users</option>
            <option value="suggested">Suggested Users</option>
          </select>
        </div>
      </div>
      <% users.forEach(function (user){ %>

      <div class="rating_box_wrapper">
        <div class="rating_box justify-content-between">
          <div class="d-flex gap-3">
            <img
              class="image2"
              loading="lazy"
              alt=""
              src="<%= user.profile %>"
            />
            <div>
              <div>
                <div class="d-flex align-items-center gap-2">
                  <h5 class="fw-bold m-0"><%= user.full_name %></h5>
                </div>
              </div>
              <div class="d-flex mt-2 gap-5">
                <div class="">
                  <p>
                    <span class="text-silver">Competent:</span>
                    <span><%= user.competentAvg %></span>
                  </p>
                  <p>
                    <span class="text-silver">Likable:</span>
                    <span><%= user.likableAvg %></span>
                  </p>
                  <p>
                    <span class="text-silver">Influential:</span>
                    <span><%= user.influentialAvg %></span>
                  </p>
                </div>

                <p>
                  <span class="text-silver">Total Reviews:</span>
                  <span><%= user.total %></span>
                </p>
              </div>
            </div>
          </div>
          <a
            href="/user?id=<%= user.id %>"
            class="btn nav_btn2 hero_btn rounded-pill px-4 py-2 fs-6"
          >
            View Profile
          </a>
        </div>
        <div class="audio-archive mt-3 gap-3">
          <div
            class="d-flex align-items-center justify-content-center gap-4"
            style="width: 126px"
          >
            <div class="social-icon">
              <i class="fa-brands fa-facebook"></i>
            </div>
            <div class="social-icon">
              <i class="fa-brands fa-linkedin"></i>
            </div>
          </div>
          <div>
            <span class="text-silver fs-14 me-5"
              ><%= user.category.name %>
            </span>
            <span class="text-silver fs-14 me-5 text-bold"
              ><%= user.country %>
            </span>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>


<footer class="footer pt-4">
  <div class="d-flex">

    <div
    class="container d-flex justify-content-between align-items-center flex-wrap gap-3"
    >
    <div class="left_foot">
      <p class="text-white fw-bold mb-1" style="font-size: 20px">RateMe</p>
      <p class="text-silver">
        Connect with others through ratings and reviews
      </p>
    </div>
    <div class="right_foot d-flex flex-wrap gap-4">
      <div>
        <p class="text-white fw-bold mb-1">Explore Users</p>
        <a href="/explore?sort=featured" class="text-silver mb-0 fs-14 text-decoration-none">Featured Users</a>
        <br>
        <a href="/explore?sort=suggested" class="text-silver mb-0 fs-14 text-decoration-none">Suggested Users</a>
      </div>
      <div>
        <p class="text-white fw-bold mb-1">Get Support</p>
        <a href="/contact" class="text-silver mb-0 fs-14 text-decoration-none">Contact Us</a>
      </div>
      <div>
      </div>
    </div>
  </div>
  </div>
  <p class="text-white fw-light mt-4 text-center mb-0">
    Copyright &copy; RateMe | All rights reserved
  </p>
</footer>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="index.js"></script>
</body>
</html>
